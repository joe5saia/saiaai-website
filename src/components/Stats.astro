---
/**
 * Stats section highlighting quantified impact.
 */
---

<section id="stats" class="section" data-reveal>
  <div class="space-y-10">
    <div class="space-y-4">
      <p class="eyebrow">Impact</p>
      <h2 class="text-3xl font-semibold sm:text-4xl">Numbers that tell the story.</h2>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      <div class="stat" data-reveal>
        <p class="text-3xl font-semibold text-white">80%</p>
        <p class="mt-2 text-sm uppercase tracking-[0.25em] text-muted">Cost reduction</p>
      </div>
      <div class="stat" data-reveal>
        <p class="text-3xl font-semibold text-white">35%</p>
        <p class="mt-2 text-sm uppercase tracking-[0.25em] text-muted">Productivity lift</p>
      </div>
      <div class="stat" data-reveal>
        <p class="text-3xl font-semibold text-white">$35M</p>
        <p class="mt-2 text-sm uppercase tracking-[0.25em] text-muted">Series A raised</p>
      </div>
      <div class="stat" data-reveal>
        <p class="text-3xl font-semibold text-white">28</p>
        <p class="mt-2 text-sm uppercase tracking-[0.25em] text-muted">Team scaled</p>
      </div>
    </div>
  </div>
</section>
