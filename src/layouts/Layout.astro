---
/**
 * Base layout that sets global metadata, background layers, and client scripts.
 */
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Saiaai | Joe Saia',
  description =
    'Fractional engineering leadership, data infrastructure, and revenue cycle systems for healthcare operators.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#0a0b10" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="page-shell">
      <!-- Ambient background layers -->
      <div class="ambient-orb orb-one" aria-hidden="true"></div>
      <div class="ambient-orb orb-two" aria-hidden="true"></div>
      <div class="ambient-grid" aria-hidden="true"></div>
      <div class="noise-overlay" aria-hidden="true"></div>
      <main>
        <slot />
      </main>
    </div>
    <script type="module" src={Astro.resolve('../lib/reveal.ts')}></script>
  </body>
</html>
